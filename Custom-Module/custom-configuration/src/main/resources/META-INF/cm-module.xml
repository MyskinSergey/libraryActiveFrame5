<?xml version="1.0" encoding="UTF-8"?>
<module xmlns="https://cm5.intertrust.ru/config/module">
    <name>custom-module</name>
    <description>Пример модуля на основе платформы</description>
    <depends>
        <depend>core</depend>
    </depends>

    <extension-points-packages>
        <extension-points-package>ru/intertrust/custommodule/extensions</extension-points-package>
    </extension-points-packages>

    <gui-components-packages>
        <gui-components-package>ru/intertrust/custommodule</gui-components-package>
    </gui-components-packages>

    <server-components-packages>
        <server-components-package>ru.intertrust.cm</server-components-package>
    </server-components-packages>
    <configuration-schema-path>configuration/custom-configuration.xsd</configuration-schema-path>

    <configuration-paths>
        <configuration-path>configuration/action/actions.xml</configuration-path>
        <configuration-path>configuration/navigation-panel.xml</configuration-path>
        <configuration-path>configuration/global.xml</configuration-path>
        <configuration-path>configuration/form-mechanism-1.xml</configuration-path>

        <!-- Коллекции -->
        <configuration-path>collections/author-collection.xml</configuration-path>
        <configuration-path>collections/book-collection.xml</configuration-path>
        <configuration-path>collections/bookqualifier-collection.xml</configuration-path>
        <configuration-path>collections/logbook-collection.xml</configuration-path>
        <configuration-path>collections/qualifier-collection.xml</configuration-path>

        <!-- Доменные объекты -->
        <configuration-path>dop/book_accounting.xml</configuration-path>
        <configuration-path>dop/book_managing.xml</configuration-path>

        <!-- Формы -->
        <configuration-path>forms/author-form.xml</configuration-path>
        <configuration-path>forms/book-form.xml</configuration-path>
        <configuration-path>forms/book-qualifier-form.xml</configuration-path>
        <configuration-path>forms/logbook-form.xml</configuration-path>
        <configuration-path>forms/qualifier-form.xml</configuration-path>
    </configuration-paths>

    <import-files rewrite="true">
        <import-file>importdata/f1.csv</import-file>
        <import-file>importdata/d1.csv</import-file>
        <import-file>importdata/c1.csv</import-file>
        <import-file>importdata/b1.csv</import-file>
        <import-file>importdata/a1.csv</import-file>
        <import-file>importdata/e1.csv</import-file>
        <import-file>importdata/a1_f1.csv</import-file>

        <import-file>importdata/lib_author.csv</import-file>
        <import-file>importdata/lib_book.csv</import-file>
        <import-file>importdata/lib_qualifier.csv</import-file>
        <import-file>importdata/lib_book_qualifier.csv</import-file>
        <import-file>importdata/lib_logbook.csv</import-file>
        <import-file>importdata/status.csv</import-file>
    </import-files>

</module>