<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration xmlns="https://cm5.intertrust.ru/config">

    <!--Todo: исправить отображение списка книг на форме -->

    <form name="qualifier_form" domain-object-type="lib_qualifier" is-default="true">
        <markup>
            <header>

            </header>
            <body display-single-tab="false">
                <tab name="Главная страница">
                    <single-entry-group>
                        <tab-group>
                            <table>

                                <tr>
                                    <td h-align="right">
                                        <widget id="qualifier_title_label"/>
                                    </td>
                                    <td h-align="left">
                                        <widget id="qualifier_title"/>
                                    </td>
                                </tr>

                                <tr>
                                    <td h-align="right">
                                        <widget id="qualifier_description_label"/>
                                    </td>
                                    <td h-align="left">
                                        <widget id="qualifier_description"/>
                                    </td>
                                </tr>

                                <tr>
                                    <td h-align="right">
                                        <widget id="qualifier_status_label"/>
                                    </td>
                                    <td h-align="left">
                                        <widget id="qualifier_status"/>
                                    </td>
                                </tr>

                                <tr>
                                    <td h-align="right">
                                        <widget id="qualifier_books_label"/>
                                    </td>
                                    <td h-align="left">
                                        <widget id="qualifier_books"/>
                                    </td>
                                </tr>

                            </table>
                        </tab-group>
                    </single-entry-group>
                </tab>
                <tab name="Книги по классификатору">
                    <single-entry-group>
                        <tab-group>
                            <table>

                                <tr>
                                    <td h-align="right">
                                        <widget id="qualifier_books_label"/>
                                    </td>
                                    <td h-align="left">
                                        <widget id="qualifier_books"/>
                                    </td>
                                </tr>

                            </table>
                        </tab-group>
                    </single-entry-group>
                </tab>
            </body>
        </markup>
        <widget-config>

            <label id="qualifier_title_label">
                <field-path/>
                <text>Классификатор</text>
            </label>
            <text-box id="qualifier_title">
                <field-path value="title"/>
            </text-box>

            <label id="qualifier_description_label">
                <field-path/>
                <text>Описание классификатора</text>
            </label>
            <text-box id="qualifier_description">
                <field-path value="description"/>
            </text-box>

            <label id="qualifier_status_label">
                <field-path/>
                <text>Статус</text>
            </label>
            <suggest-box id="qualifier_status">
                <field-path value="status" on-root-delete="unlink"/>
                <collection-ref name="qualifier_status_collection"/>
                <input-text-filter name="byStatusName"/>
                <drop-down-pattern value="{status_name}"/>
                <selection-pattern value="{status_name}"/>
                <page-size>30</page-size>
                <selection-style name="table"/>
            </suggest-box>

            <label id="qualifier_books_label">
                <field-path/>
                <text>Книги по классификатору</text>
            </label>
            <linked-domain-objects-table id="qualifier_books" modal-width="500px" modal-height="300px">
                <field-path value="lib_book_qualifier^book" on-root-delete="unlink"/>
                <linked-form name="book_form" inline="true"/>
                <summary-table>
                    <summary-table-column header="Название" widget-id="book_name">
                        <pattern value="{name}"/>
                    </summary-table-column>
                    <summary-table-column header="Описание" widget-id="book_description">
                        <pattern value="{description}"/>
                    </summary-table-column>
                </summary-table>
                <single-choice value="false"/>
            </linked-domain-objects-table>

        </widget-config>
    </form>

</configuration>