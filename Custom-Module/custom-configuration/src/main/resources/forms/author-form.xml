<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration xmlns="https://cm5.intertrust.ru/config">

    <form name="author_form" domain-object-type="Lib_Author" is-default="true">
        <markup>
            <header>

            </header>
            <body display-single-tab="false">
                <tab name="Главная">
                    <single-entry-group>
                        <tab-group>
                            <table>
                                <tr>
                                    <td h-align="right">
                                        <widget id="author_name_label"/>
                                    </td>
                                    <td h-align="left">
                                        <widget id="author_name"/>
                                    </td>
                                </tr>

                                <tr>
                                    <td h-align="right">
                                        <widget id="author_description_label"/>
                                    </td>
                                    <td h-align="left">
                                        <widget id="author_description"/>
                                    </td>
                                </tr>

                                <tr>
                                    <td h-align="right">
                                        <widget id="book_name_label"/>
                                    </td>
                                    <td h-align="left">
                                        <widget id="book_name"/>
                                    </td>
                                </tr>
                            </table>
                        </tab-group>
                    </single-entry-group>
                </tab>
            </body>
        </markup>
        <widget-config>
            <label id="author_name_label">
                <field-path/>
                <text>Имя автора</text>
            </label>
            <text-box id="author_name">
                <field-path value="name"/>
            </text-box>
            <label id="author_description_label">
                <field-path/>
                <text>Биография</text>
            </label>
            <text-box id="author_description">
                <field-path value="description"/>
            </text-box>

            <label id="book_name_label">
                <field-path/>
                <text>Книга</text>
            </label>
            <suggest-box id="book_name">
                <field-path value="Book" on-root-delete="unlink"/>
                <collection-ref name="author_books_collection"/>
                <input-text-filter name="byBookName"/>
                <drop-down-pattern value="{book_name} ({book_description})"/>
                <selection-pattern value="{book_name}"/>
                <page-size>30</page-size>
                <selection-style name="table"/>
            </suggest-box>

        </widget-config>
    </form>

</configuration>