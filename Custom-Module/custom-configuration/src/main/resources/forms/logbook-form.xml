<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration xmlns="https://cm5.intertrust.ru/config">

    <form name="log_book" domain-object-type="Lib_LogBook" is-default="true">
        <markup>
            <header>

            </header>
            <body display-single-tab="false">
                <tab name="Главная. Формуляр">
                    <single-entry-group>
                        <tab-group>
                            <table>
                                <tr>
                                    <td h-align="right">
                                        <widget id="logbook_log_number_label"/>
                                    </td>

                                    <td h-align="left">
                                        <widget id="logbook_log_number"/>
                                    </td>
                                </tr>

                                <tr>
                                    <td h-align="right">
                                        <widget id="logbook_published_label"/>
                                    </td>
                                    <td h-align="left">
                                        <widget id="logbook_published"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td h-align="right">
                                        <widget id="logbook_location_label"/>
                                    </td>
                                    <td h-align="left">
                                        <widget id="logbook_location"/>
                                    </td>
                                </tr>
                            </table>
                        </tab-group>
                    </single-entry-group>
                </tab>
            </body>
        </markup>
        <widget-config>
<!--
            <label id="logbook_book_label">
                <field-path/>
                <text>book</text>
            </label>
            <text-box id="logbook_book">
                <field-path value="number"/>
            </text-box>
-->

            <label id="logbook_log_number_label">
                <field-path/>
                <text>Logbook number</text>
            </label>
            <text-box id="logbook_log_number">
                <field-path value="number"/>
            </text-box>

            <label id="logbook_published_label">
                <field-path/>
                <text>Published </text>
            </label>
            <text-box id="logbook_published">
                <field-path value="published"/>
            </text-box>

            <label id="logbook_location_label">
                <field-path/>
                <text>Location</text>
            </label>
            <text-box id="logbook_location">
                <field-path value="location"/>
            </text-box>


        </widget-config>
    </form>

</configuration>