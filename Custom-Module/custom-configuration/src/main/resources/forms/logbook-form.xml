<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration xmlns="https://cm5.intertrust.ru/config">

    <form name="log_book" domain-object-type="Lib_LogBook" is-default="true">
        <markup>
            <header>

            </header>
            <body display-single-tab="false">
                <tab name="Главная. Формуляр">
                    <single-entry-group>
                        <tab-group>
                            <table>
                                <tr>
                                    <td h-align="right">
                                        <widget id="logbook_book_label"/>
                                    </td>

                                    <td h-align="left">
                                        <widget id="logbook_book"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td h-align="right">
                                        <widget id="logbook_log_number_label"/>
                                    </td>

                                    <td h-align="left">
                                        <widget id="logbook_log_number"/>
                                    </td>
                                </tr>

                                <tr>
                                    <td h-align="right">
                                        <widget id="logbook_published_label"/>
                                    </td>
                                    <td h-align="left">
                                        <widget id="logbook_published"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td h-align="right">
                                        <widget id="logbook_location_label"/>
                                    </td>
                                    <td h-align="left">
                                        <widget id="logbook_location"/>
                                    </td>
                                </tr>
                            </table>
                        </tab-group>
                    </single-entry-group>
                </tab>
            </body>
        </markup>
        <widget-config>

            <label id="logbook_book_label">
                <field-path/>
                <text>Книга</text>
            </label>
            <suggest-box id="logbook_book">
                <field-path value="book" on-root-delete="unlink"/>
                    <collection-ref name="book_collection"/>
                    <input-text-filter name="byBookTitle"/>
                    <drop-down-pattern value="{lib_book_name} ({lib_book_description})"/>
                    <selection-pattern value="{lib_book_name}"/>
                    <page-size>30</page-size>
                    <selection-style name="table"/>
            </suggest-box>

            <label id="logbook_log_number_label">
                <field-path/>
                <text>Регистрац.№</text>
            </label>
            <integer-box id="logbook_log_number">
                <field-path value="log_number"/>
            </integer-box>

            <label id="logbook_published_label">
                <field-path/>
                <text>Год публикации</text>
            </label>
            <date-box id="logbook_published">
                <field-path value="published"/>
            </date-box>


            <label id="logbook_location_label">
                <field-path/>
                <text>Местонахождение</text>
            </label>
            <text-box id="logbook_location">
                <field-path value="location"/>
            </text-box>


        </widget-config>
    </form>

</configuration>