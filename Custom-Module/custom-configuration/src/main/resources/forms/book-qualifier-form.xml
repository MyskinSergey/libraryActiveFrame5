<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration xmlns="https://cm5.intertrust.ru/config">


    <form name="book_qualifier_form" domain-object-type="Lib_Book_Qualifier" is-default="true">
        <markup>
            <header></header>
            <body display-single-tab="false">
                <tab name="MainTab">
                    <single-entry-group>
                        <tab-group>
                            <table>

                                <tr>
                                    <td h-align="right">
                                        <widget id="book_qualifier_qualifier_label"/>
                                    </td>
                                    <td h-align="left">
                                        <widget id="book_qualifier_qualifier"/>
                                    </td>
                                </tr>

                                <tr>
                                    <td h-align="right">
                                        <widget id="book_qualifier_book_label"/>
                                    </td>
                                    <td h-align="left">
                                        <widget id="book_qualifier_book"/>
                                    </td>
                                </tr>

                            </table>
                        </tab-group>
                    </single-entry-group>
                </tab>
            </body>
        </markup>

        <widget-config>

            <label id="book_qualifier_qualifier_label">
                <field-path/>
                <text>Классификатор</text>
            </label>
            <suggest-box id="book_qualifier_book" >
                <field-path value="Qualifier" on-root-delete="unlink"/>
                <collection-ref name="book_qualifier_books_collection"/>
                <input-text-filter name="byBookName"/>
                <drop-down-pattern value="{book_name} ({book_description})"/>
                <selection-pattern value="{book_name}"/>
                <page-size>30</page-size>
                <selection-style name="table"/>
            </suggest-box>

            <label id="book_qualifier_book_label">
                <field-path/>
                <text>Книга</text>
            </label>
            <suggest-box id="book_qualifier_qualifier">
                <field-path value="Book" on-root-delete="unlink"/>
                <collection-ref name="book_qualifier_qualifiers_collection"/>
                <input-text-filter name="byQualifierTitle"/>
                <drop-down-pattern value="{qualifier_title} ({qualifier_description})"/>
                <selection-pattern value="{qualifier_title}"/>
                <page-size>30</page-size>
                <selection-style name="table"/>
            </suggest-box>

        </widget-config>

    </form>
</configuration>