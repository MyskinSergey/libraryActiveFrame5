<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<configuration xmlns="https://cm5.intertrust.ru/config">
    <navigation name="default-panel" is-default="true">

        <link name="Card_file" display-text="Картотека" image="images/docs.png">
            <child-links>

                <link name="Books" display-text="Книги">
                    <plugin>
                        <domain-object-surfer domain-object-type-to-create="Lib_Book">
                            <collection-viewer>
                                <collection-ref name="book_collection"/>
                                <default-sort-criteria column-field="Lib_Book_Name" order="ASC"/>
                            </collection-viewer>
                        </domain-object-surfer>
                    </plugin>
                </link>

            </child-links>
        </link>

        <link name="References" display-text="Справочники" image="images/helpers.png">
            <child-links>

                <link name="Authors" display-text="Авторы">
                    <plugin>
                        <domain-object-surfer domain-object-type-to-create="Lib_Author">
                            <collection-viewer>
                                <collection-ref name="author_collection"/>
                                <default-sort-criteria column-field="Lib_Author_Name" order="ASC"/>
                            </collection-viewer>
                        </domain-object-surfer>
                    </plugin>
                </link>

                <link name="Qualifier" display-text="Классификатор">
                    <plugin>
                        <domain-object-surfer domain-object-type-to-create="Lib_Qualifier">
                            <collection-viewer>
                                <collection-ref name="qualifier_collection"/>
                                <default-sort-criteria column-field="Qualifier_Title" order="ASC"/>
                            </collection-viewer>
                        </domain-object-surfer>
                    </plugin>
                </link>

                <link name="LogBook" display-text="Формуляр">
                    <plugin>
                        <domain-object-surfer domain-object-type-to-create="Lib_LogBook">
                            <collection-viewer>
                                <collection-ref name="logbook_collection"/>
                                <default-sort-criteria column-field="Lib_LogBook_Published" order="ASC"/>
                            </collection-viewer>
                        </domain-object-surfer>
                    </plugin>
                </link>
            </child-links>
        </link>

    </navigation>

    <navigation-panel-mappings name="nav-panel-map1">
        <navigation-panel-mapping name="default-panel">
            <users>
                <user uid="admin"/>
            </users>
            <groups>
                <group-name value="test-group-1" priority="20"/>
            </groups>
        </navigation-panel-mapping>
    </navigation-panel-mappings>
</configuration>