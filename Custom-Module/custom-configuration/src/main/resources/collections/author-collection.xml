<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration xmlns="https://cm5.intertrust.ru/config">

    <collection name="author_collection" idField="id">
        <prototype>
            <![CDATA[
                SELECT
                  Lib_Author.id,
                  Lib_Author.Name        lib_author_name,
                  Lib_Author.Description lib_author_description
                FROM lib_author
                WHERE
                    1=1 ::where-clause
            ]]>
        </prototype>
    </collection>

    <collection-view name="author_collection_default_view" collection="author_collection" is-default="true">
        <display>
            <column field="id" name="id" type="integer" sortable="false" max-width="250px" text-break-style="cut"/>
            <column field="Lib_Author_Name" name="Lib_Author_Name" type="string" editable="false" sortable="true"
                    min-width="50px" text-break-style="cut"/>
            <column field="Lib_Author_Description" name="Lib_Author_Description" type="string" editable="false" sortable="true"
                    min-width="50px" text-break-style="cut"/>
        </display>
    </collection-view>

</configuration>