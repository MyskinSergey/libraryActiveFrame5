<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration xmlns="https://cm5.intertrust.ru/config">

    <collection name="logbook_collection" idField="id">
        <prototype>
            <![CDATA[
                SELECT
                    liblog.id as id,
                    b.name as book_name,
                    log_number  lib_logbook_log_number,
                    published   lib_logbook_published,
                    location    lib_logbook_location
                FROM lib_logbook liblog
                INNER JOIN lib_Book b ON b.id = liblog.book
                WHERE
                    1=1 ::where-clause
            ]]>
        </prototype>
    </collection>

    <collection-view name="logbook_collection_default_view" collection="logbook_collection" is-default="true">
        <display>
            <column field="book_name" name="Наименование" type="string" editable="true" sortable="true"
                    min-width="50px" text-break-style="cut"/>
            <column field="Lib_LogBook_Log_Number" name="Регистрационный №" type="long" editable="true" sortable="true"
                    min-width="50px" text-break-style="cut"/>
            <column field="Lib_LogBook_Published" name="Год публикации" type="timelessDate" editable="true"
                    sortable="true"
                    min-width="50px" text-break-style="cut"/>
            <column field="Lib_LogBook_Location" name="Местонахождение" type="string" editable="true"
                    sortable="true"
                    min-width="50px" text-break-style="cut"/>
        </display>
    </collection-view>

</configuration>