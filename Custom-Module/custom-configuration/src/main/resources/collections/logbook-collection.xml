<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration xmlns="https://cm5.intertrust.ru/config">

    <collection name="logbook_collection" idField="id">
        <prototype>
            <![CDATA[
                SELECT
                    id,
                    book        lib_logbook_book,
                    log_number  lib_logbook_log_number,
                    published   lib_logbook_published,
                    location    lib_logbook_location

                FROM
                    lib_logbook

                WHERE
                    1=1 ::where-clause
            ]]>
        </prototype>


    </collection>

    <collection-view name="logbook_collection_default_view" collection="logbook_collection" is-default="true">
        <display>
            <column field="Lib_LogBook_Book" name="Lib_LogBook_Book" type="integer" editable="true" sortable="true"
                    min-width="50px" text-break-style="cut"/>
            <column field="Lib_LogBook_Log_Number" name="Lib_LogBook_Log_Number" type="long" editable="true" sortable="true"
                    min-width="50px" text-break-style="cut"/>
            <column field="Lib_LogBook_Published" name="Lib_LogBook_Published" type="timelessDate" editable="true"
                    sortable="true"
                    min-width="50px" text-break-style="cut"/>
            <column field="Lib_LogBook_Location" name="Lib_LogBook_Location" type="string" editable="true"
                    sortable="true"
                    min-width="50px" text-break-style="cut"/>


        </display>
    </collection-view>


</configuration>