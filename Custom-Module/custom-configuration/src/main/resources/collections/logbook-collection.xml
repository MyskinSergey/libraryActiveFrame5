<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration xmlns="https://cm5.intertrust.ru/config">

    <collection name="logbook_collection" idField="id">
        <prototype>
            <![CDATA[
                SELECT
                    lb.id,
                    lb.log_number  as logbook_number,
                    lb.published   as logbook_published,
                    lb.location    as logbook_location,
                    b.name as book_name
                FROM lib_logbook lb
                INNER JOIN lib_Book b ON b.id = lb.book
                WHERE
                    1=1 ::where-clause
            ]]>
        </prototype>
    </collection>

    <collection-view name="logbook_collection_default_view" collection="logbook_collection" is-default="true">
        <display>
            <column field="book_name" name="Наименование" type="string" editable="true" sortable="true"
                    min-width="50px" text-break-style="cut"/>
            <column field="logbook_number" name="Регистрационный №" type="long" editable="true" sortable="true"
                    min-width="50px" text-break-style="cut"/>
            <column field="logbook_published" name="Год публикации" type="timelessDate" editable="true"
                    sortable="true"
                    min-width="50px" text-break-style="cut"/>
            <column field="logbook_location" name="Местонахождение" type="string" editable="true"
                    sortable="true" min-width="50px" text-break-style="cut"/>
        </display>
    </collection-view>

</configuration>