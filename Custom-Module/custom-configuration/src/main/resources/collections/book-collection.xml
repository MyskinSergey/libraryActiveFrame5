<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration xmlns="https://cm5.intertrust.ru/config">

    <collection name="book_collection" idField="id">
        <prototype>
            <![CDATA[
                SELECT
                  b.id          AS id,
                  b.name        AS lib_book_name,
                  b.description AS lib_book_description,
                  a.name        AS author_name

                FROM lib_book b
                  INNER JOIN Lib_author a ON a.id = b.author
                WHERE
                  1=1 ::where-clause
            ]]>
        </prototype>

        <filter name="byBookTitle">
            <criteria placeholder="where-clause">
                <![CDATA[
                    LOWER(name) LIKE LOWER('%' || {0} || '%')
                ]]>
            </criteria>
        </filter>
    </collection>

    <collection-view name="book_collection_default_view" collection="book_collection" is-default="true">
        <display>
            <column field="Lib_Book_Name" name="Название книги" type="string" editable="false" sortable="true"
                    min-width="50px" text-break-style="cut"/>
            <column field="Lib_Book_Description" name="Описание книги" type="string" editable="false"
                    sortable="true"
                    min-width="50px" text-break-style="cut"/>
            <column field="author_name" name="Автор" type="string" editable="false"
                    sortable="true" min-width="50px" text-break-style="cut"/>
        </display>
    </collection-view>

</configuration>