<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration xmlns="https://cm5.intertrust.ru/config">

    <collection name="bookqualifier_collection" idField="id">
        <prototype>
            <![CDATA[
                SELECT
                    bq.id   AS id,
                    b.name  AS book_name,
                    q.title AS qualifier_title
                FROM lib_book_qualifier bq
                INNER JOIN Lib_Book b ON b.id = bq.book
                INNER JOIN Lib_Qualifier q ON q.id = bq.qualifier
                WHERE
                    1=1 ::where-clause
            ]]>
        </prototype>
    </collection>

    <collection-view name="bookqualifier_collection_default_view" collection="bookqualifier_collection"
                     is-default="true">
        <display>
            <column field="book_name" name="Книги" type="string" editable="false" sortable="true"
                    min-width="50px" text-break-style="cut"/>
            <column field="qualifier_title" name="Классификатор" type="string" editable="true" sortable="true"
                    min-width="50px" text-break-style="cut"/>
        </display>
    </collection-view>

    <collection name="book_qualifier_books_collection" idField="id">
        <prototype>
            <![CDATA[
                SELECT
                  id,
                  name        book_name,
                  description book_description
                FROM lib_book
                WHERE
                    1=1 ::where-clause
            ]]>
        </prototype>
        <filter name="byBookName">
            <criteria placeholder="where-clause">
                <![CDATA[
                    LOWER(name) LIKE LOWER('%' || {0} || '%')
                ]]>
            </criteria>
        </filter>
    </collection>

    <collection-view name="book_qualifier_books_collection_view" collection="book_qualifier_books_collection" is-default="true">
        <display>
            <column field="book_name" name="Название книги" type="string" editable="false" sortable="true"
                    min-width="50px" text-break-style="cut"/>
            <column field="book_description" name="Описание книги" type="string" editable="false"
                    sortable="true"
                    min-width="50px" text-break-style="cut"/>
        </display>
    </collection-view>

    <collection name="book_qualifier_qualifiers_collection" idField="id">
        <prototype>
            <![CDATA[
                SELECT
                  id,
                  title         AS qualifier_title,
                  description   AS qualifier_description
                FROM Lib_Qualifier
                WHERE
                    1=1 ::where-clause
            ]]>
        </prototype>
        <filter name="byQualifierTitle">
            <criteria placeholder="where-clause">
                <![CDATA[
                    LOWER(title) LIKE LOWER('%' || {0} || '%')
                ]]>
            </criteria>
        </filter>

    </collection>

    <collection-view name="book_qualifier_qualifiers_collection_view" collection="book_qualifier_qualifiers_collection" is-default="true">
        <display>
            <column field="qualifier_title" name="Qualifier_Title" type="string" editable="false" sortable="true"
                    min-width="50px" text-break-style="cut"/>
            <column field="qualifier_description" name="Qualifier_Description" type="string" editable="false"
                    sortable="true"
                    min-width="50px" text-break-style="cut"/>
        </display>
    </collection-view>



</configuration>