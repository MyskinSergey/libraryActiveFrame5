<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration xmlns="https://cm5.intertrust.ru/config">

    <collection name="bookqualifier_collection" idField="id">
        <prototype>
            <![CDATA[
                SELECT
                    bq.id   AS id,
                    b.name  AS book_name,
                    q.title AS qualifier_title
                FROM lib_book_qualifier bq
                INNER JOIN Lib_Book b ON b.id = bq.book
                INNER JOIN Lib_Qualifier q ON q.id = bq.qualifier
                WHERE
                    1=1 ::where-clause
            ]]>
        </prototype>
    </collection>

    <collection-view name="bookqualifier_collection_default_view" collection="bookqualifier_collection"
                     is-default="true">
        <display>
            <column field="book_name" name="Книги" type="string" editable="false" sortable="true"
                    min-width="50px" text-break-style="cut"/>
            <column field="qualifier_title" name="Классификатор" type="string" editable="true" sortable="true"
                    min-width="50px" text-break-style="cut"/>
        </display>
    </collection-view>

    <collection name="dropdown_book_collection" idField="id">
        <prototype>
            <![CDATA[
                SELECT
                  id,
                  name        dropdown_lib_book_name,
                  description dropdown_lib_book_description
                FROM lib_book
                WHERE
                    1=1 ::where-clause
            ]]>
        </prototype>
    </collection>

    <collection-view name="dropdown_book_collection_default_view" collection="dropdown_book_collection" is-default="true">
        <display>
            <column field="Dropdown_Lib_Book_Name" name="Название книги" type="string" editable="false" sortable="true"
                    min-width="50px" text-break-style="cut"/>
            <column field="Dropdown_Lib_Book_Description" name="Описание книги" type="string" editable="false"
                    sortable="true"
                    min-width="50px" text-break-style="cut"/>
        </display>
    </collection-view>

    <collection name="dropdown_qualifier_collection" idField="id">
        <prototype>
            <![CDATA[
                SELECT
                  id,
                  title       dropdown_qualifier_title,
                  description dropdown_qualifier_description
                FROM Lib_Qualifier
                WHERE
                    1=1 ::where-clause
            ]]>
        </prototype>
    </collection>

    <collection-view name="dropdown_qualifier_collection_default_view" collection="dropdown_qualifier_collection" is-default="true">
        <display>
            <column field="dropdown_Qualifier_Title" name="Qualifier_Title" type="string" editable="false" sortable="true"
                    min-width="50px" text-break-style="cut"/>
            <column field="dropdown_Qualifier_Description" name="Qualifier_Description" type="string" editable="false"
                    sortable="true"
                    min-width="50px" text-break-style="cut"/>
        </display>
    </collection-view>



</configuration>