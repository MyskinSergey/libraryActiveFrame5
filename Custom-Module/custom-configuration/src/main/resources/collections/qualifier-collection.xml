<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration xmlns="https://cm5.intertrust.ru/config">
    
    <collection name="qualifier-collection" idField="id">
        <prototype>
            <![CDATA[
                SELECT
                  id,
                  title       qualifier_title ,
                  description qualifier_description
                FROM Lib_Qualifier
                WHERE
                    1=1 ::where-clause
            ]]>
        </prototype>
    </collection>

    <collection-view name="qualifier_collection_default_view" collection="qualifier_collection" is-default="true">
        <display>
            <column field="Qualifier_Title" name="Qualifier_Title" type="string" editable="false" sortable="true"
                    min-width="50px" text-break-style="cut"/>
            <column field="Qualifier_Description" name="Qualifier_Description" type="string" editable="false" sortable="true"
                    min-width="50px" text-break-style="cut"/>
        </display>
    </collection-view>

</configuration>