<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration xmlns="https://cm5.intertrust.ru/config">

    <!-- Todo: добавить агрегатную функцию -->

    <collection name="qualifier_collection" idField="id">
        <prototype>
            <![CDATA[
                SELECT
                  q.id                       AS id,
                  q.title                    AS qualifier_title,
                  q.description              AS qualifier_description,
                  string_agg(b.name, ', ')   AS books_name

                FROM Lib_Qualifier q
                  INNER JOIN Lib_book_qualifier bq ON q.id = bq.qualifier
                  INNER JOIN lib_book b on bq.book = b.id
                WHERE
                  1=1 ::where-clause
                GROUP BY q.id
            ]]>
        </prototype>
    </collection>

    <collection-view name="qualifier_ view" collection="qualifier_collection" is-default="true">
        <display>
            <column field="qualifier_title" name="Классификатор" type="string" editable="false" sortable="true"
                    min-width="50px" text-break-style="cut"/>
            <column field="qualifier_description" name="Описание" type="string" editable="false"
                    sortable="true" min-width="50px" text-break-style="cut"/>
            <column field="books_name" name="Имя книги" type="string" editable="true"
                    sortable="true" min-width="50px" text-break-style="cut"/>
        </display>
    </collection-view>

    <collection name="qualifier_status_collection" idField="id">
        <prototype>
            <![CDATA[
                SELECT
                    id,
                    name AS status_name,
                    description AS status_description
                FROM status
                WHERE
                name IN ('Draft', 'Pending', 'Performed', 'Closed', 'Published', 'Reserved') ::where-clause
            ]]>
        </prototype>
        <filter name="byStatusName">
            <criteria placeholder="where-clause">
                <![CDATA[
                    LOWER(description) LIKE LOWER('%' || {0} || '%')
                ]]>
            </criteria>
        </filter>
    </collection>

</configuration>